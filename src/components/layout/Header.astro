---
import Navigation from "./Navigation.astro";
import ThemeIcon from "../ui/ThemeIcon.astro";
import Social from "../ui/Social.astro";
import { Icon } from "astro-icon/components";

const currentPath = Astro.url.pathname;
const routes = ["/", "/about-me"];

const github = "https://github.com/OS-Lihua";
const twitter = "https://www.x.com/0xYaCo";
const linktree = "https://linktr.ee/0xYaCo";

// Check if the current route is in the list of routes
const isActiveRoute = routes.includes(currentPath);

const navItems = isActiveRoute
  ? ["home", "experience", "projects", "blog", "friend", "about", "link"]
  : ["home", "blog", "friend", "about", "link"]; // Change the items
---

<header
  role="banner"
  aria-label="Main navigation"
  class="header-glass-container font-medium text-blacktext dark:text-zinc-300"
>
  <div class="nav-glass-enhanced">
    <div
      class="relative flex flex-row items-center justify-between"
    >
    <a href="/" aria-label="Go to home">
      <Icon
        name="logo"
        class="h-6 cursor-pointer transition-all hover:text-mint-300"
        aria-hidden="true"
      />
    </a>

    <Navigation items={navItems} />

    <div class="flex items-center justify-between gap-5 text-xl">
      <div
        class="max-md:hidden flex items-center justify-center gap-5"
        role="list"
      >
        <Social link={github} iconName="github" />
        <Social link={twitter} iconName="twitter" />
        <Social link={linktree} iconName="linktree" />
      </div>
    </div>
    <div class="flex items-center gap-5 text-xl md:pl-5">
      <ThemeIcon />
      <button
        class="hamburger"
        aria-label="Open menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <Icon name="bars" class="hamburger-icon bars-icon" aria-hidden="true" />
        <Icon
          name="xmark"
          class="hamburger-icon xmark-icon"
          aria-hidden="true"
        />
      </button>
    </div>
    </div>
  </div>
</header>
