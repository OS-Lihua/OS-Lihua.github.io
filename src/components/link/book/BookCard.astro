---
const { name, author, cover, link } = Astro.props;
---

<a href={link} target="_blank" rel="noopener" class="book-card">
  <div class="card-inner">
    <div class="cover-container">
      <img src={cover} alt={name} class="cover" />
    </div>
    <div class="info">
      <h3 class="title">{name}</h3>
      <p class="author">{author}</p>
    </div>
  </div>
</a>

<style>
  /* 书卡片容器 - 支持明暗模式 */
  .book-card {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    background-color: var(--card-bg, #ffffff);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  }

  /* 卡片内部容器 - 提供内边距 */
  .card-inner {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 14px;
  }

  /* 悬停效果 */
  .book-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
  }

  /* 封面容器 - 黄金比例 */
  .cover-container {
    width: 100%;
    aspect-ratio: 1 / 1.414; /* 黄金比例约为1.618:1 */
    border-radius: 10px; /* 圆角封面 */
    overflow: hidden;
    margin-bottom: 6px;
  }

  /* 封面图片 */
  .cover {
    width: 100%;
    height: 100%;
    object-fit: fill;
    transition: transform 0.5s ease;
  }

  /* 封面悬停效果 */
  .book-card:hover .cover {
    transform: scale(1.05);
  }

  /* 书籍信息区域 */
  .info {
    padding: 4px 4px 8px 4px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  /* 书籍标题 */
  .title {
    margin: 0 0 8px 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-color, #333);
    line-height: 1.3;
  }

  /* 作者信息 */
  .author {
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-muted, #666);
    line-height: 1.4;
  }

  /* 适应深色模式 */
  :global(.dark) .book-card {
    --card-bg: #1a1a2e;
    --text-color: #e1e1e1;
    --text-muted: #a0a0a0;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }

  :global(.dark) .book-card:hover {
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
  }
</style>
