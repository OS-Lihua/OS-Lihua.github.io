---
import "../styles/global.css";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
const {
  pageTitle = "YaCo | Crypto & AI Developer ğŸš€ ğŸš€",
  description = "æ¬¢è¿æ¥åˆ° YaCo çš„ç½‘ç«™ï¼Œåœ¨è¿™é‡Œæˆ‘å¯¹ä¸–ç•Œçš„ç†è§£ã€‚",
  ogimage = {
    url: "/images/yaco.png",
    alt: "YaCo logo",
  },
} = Astro.props;

const siteUrl = new URL(Astro.url).origin;
const SEO = {
  sitename: "YaCo | Crypto & AI Developer ğŸš€",
  url: siteUrl,
  locale: "zh_CN",
  author: "YaCo | YaCo",
  twitter: "@0xYaCo",
};

const twitterimage = `${siteUrl}${ogimage.url}`;
---

<html
  lang="en"
  class="dark:bg-[#0E0E11] bg-mint-50/5 font-montserrat scroll-smooth"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>

    <meta name="description" content={description} />
    <meta name="author" content={SEO.author} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={`${Astro.site}${Astro.url.pathname}`} />
    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogimage.url} />
    <meta property="og:image:alt" content={ogimage.alt} />
    <meta property="og:url" content={SEO.url} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={SEO.sitename} />
    <meta property="og:locale" content={SEO.locale} />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={twitterimage} />
    <meta name="twitter:image:alt" content={ogimage.alt} />
    <meta name="twitter:site" content={SEO.twitter} />

    <meta name="theme-color" content="#0E0E11" />
    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- AOS åŠ¨ç”»åº“ - é›†ä¸­ç®¡ç† -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" />
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js" defer></script>
  </head>
  <body class="overflow-x-hidden">
    <SpeedInsights />
    <div class="blur-circle"></div>
    <div
      style="  background:linear-gradient(45deg, rgba(96, 250, 155, 0) 10.79%, rgba(96, 250, 170, 0.03) 40.92%, rgba(96, 250, 155, 0) 90.35%)"
      class="fixed top-0 left-0 w-full h-full pointer-events-none -z-1"
    >
    </div>
    <Header />

    <div class="min-h-[85vh]">
      <slot />
    </div>

    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>

    <!-- AOS åˆå§‹åŒ– - å…¨ç«™ç»Ÿä¸€é…ç½® -->
    <script is:inline>
      document.addEventListener("DOMContentLoaded", function () {
        if (typeof AOS !== "undefined" && !window.aosInitialized) {
          AOS.init({
            duration: 800,
            easing: "ease-out",
            once: true,
            offset: 50,
            disable: "mobile"
          });
          window.aosInitialized = true;
          
          // ä½¿ç”¨äº‹ä»¶å§”æ‰˜ç›‘å¬é¡µé¢å˜åŒ–ï¼Œåˆ·æ–°AOS
          document.addEventListener("astro:page-load", function() {
            setTimeout(function() {
              AOS.refresh();
            }, 100);
          });
        }
      });
    </script>
  </body>
</html>
