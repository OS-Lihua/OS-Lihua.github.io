---
import Layout from "../../../layouts/Layout.astro";

const pageTitle = "音乐";
const description = "我的音乐收藏";
const ogimage = {
  url: "/images/music.png",
  alt: "我的音乐收藏",
};
---

<Layout pageTitle={pageTitle} description={description} ogimage={ogimage}>
  <div class="spotify-container">
    <iframe
      class="spotify-iframe"
      src="https://open.spotify.com/user/316ui34tgsdoshwq7j5gyei6mtk4?si=d9f9ad8bc25c4360"
      allowfullscreen
      allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
      loading="lazy"
    >
    </iframe>
  </div>
</Layout>

<style>
  body {
    font-family: "Helvetica Neue", Arial, sans-serif;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }
  h1 {
    color: #1db954; /* Spotify 绿色 */
    text-align: center;
    margin-bottom: 30px;
  }
  .spotify-container {
    width: 100%;
    height: 80vh;
    min-height: 600px;
    margin: 0 auto;
  }
  .spotify-iframe {
    border-radius: 12px;
    width: 100%;
    height: 100%;
    border: none;
  }

  /* 响应式设计 */
  @media (max-width: 768px) {
    h1 {
      font-size: 1.5rem;
    }
    .spotify-container {
      height: 60vh;
    }
  }
</style>
